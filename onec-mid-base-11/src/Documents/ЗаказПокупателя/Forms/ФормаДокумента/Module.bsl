&НаКлиенте
Процедура РассчитатьСуммуСтрокиСогласованнаяСкидка(ТекущиеДанные)
	
	// {{ Авдюшин А.В.: 22.01.2023, Расчет согласованной скидки
	Если Объект.КЛ_СогласованнаяСкидка = 0 Тогда
		
		ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество;
	Иначе
		
		ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * (100 - Объект.кл_СогласованнаяСкидка) / 100;
	КонецЕсли;
	// }}
	
КонецПроцедуры

&НаКлиенте
Процедура кл_СогласованнаяСкидкаПриИзменении(Элемент)
	
	// {{ Авдюшин А.В.: 22.01.2023, Вопрос при изменении скидки
	КонтрольЗначенияСкидки();
	
	ЗадатьВопросИзменениеСкидки();
	// }}
	
КонецПроцедуры

&НаКлиенте
Асинх Процедура ЗадатьВопросИзменениеСкидки()
	
	// {{ Авдюшин А.В.: 22.01.2023, Вопрос АСИНХ
	Обещание = ВопросАсинх(НСтр("ru='Процент скидки изменился, пересчитать документ?'"), РежимДиалогаВопрос.ДаНет, , КодВозвратаДиалога.Да);
	Результат = Ждать Обещание;
	
	Если Результат = КодВозвратаДиалога.Да Тогда
		
		ПересчитатьСкидкуПоДокументу ();
		
	ИначеЕсли Результат = КодВозвратаДиалога.Нет Тогда 
		
		Текст = НСтр("ru='Поле ""Согласованной скидка"" будет очищено.'");
		
		Обещание = ПредупреждениеАсинх(Текст);
		Результат = Ждать Обещание;
		
		Объект.кл_СогласованнаяСкидка = 0;
		
		Возврат;
	КонецЕсли;
	// }}
	
КонецПроцедуры

&НаКлиенте
Процедура ПересчитатьСкидкуПоДокументу ()
	
	// {{ Авдюшин А.В.: 22.01.2023, Цикл для пересчета всей таблицы Товары и Услуги
	Для Каждого Строка Из Объект.Услуги Цикл
		
		РассчитатьСуммуСтроки(Строка);
	КонецЦикла;
	
	Для Каждого Строка из Объект.Товары Цикл
		
		РассчитатьСуммуСтроки(Строка);
	КонецЦикла
	// }}

КонецПроцедуры

&НаКлиенте
Процедура КонтрольЗначенияСкидки();
	
	// {{ Авдюшин А.В.: 22.01.2023, Контроль заначения скидки 
	Если Объект.кл_СогласованнаяСкидка > 100 Тогда
		
		Сообщение = Новый СообщениеПользователю();
		Сообщение.Текст = "Скидка не может превышать значение 100%, значение скидки будет сброшено!";
		Сообщение.Сообщить();
		
		Объект.кл_СогласованнаяСкидка = 0;
		
	КонецЕсли;
	// }}
	
КонецПроцедуры


